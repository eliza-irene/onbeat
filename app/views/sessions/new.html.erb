<% provide(:title, "Sign In") %>

<div class="text-center" id="signin">
  <div class="user-form">
    <h1>Sign In</h1>
      <%= form_for(:session, url: sessions_path) do |f| %>
        <%= f.label :email, class: "control-label" %>:
        <%= f.text_field :email, class: "form-control input-sm", autofocus: true  %> 
        <br />
        <%= f.label :password, class: "control-label" %>:
        <%= f.password_field :password, class: "form-control input-sm" %>
        <br/>
        <%= f.submit 'Ready to Rock!', class: "btn btn-large btn-warning btn-block" %>
      <% end %>
    <br/>
    <p class="lead text-center sign_note"><%= link_to "Oh snap! Sign up instead!", signup_path %></p>
  </div>
</div>
