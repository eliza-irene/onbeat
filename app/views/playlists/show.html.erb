<% provide(:title, @playlist.name) %>

<div class="col-sm-12 text-center" id="view"> 
  <h1 class="text-center">View Playlist:</h1>
  <p class="lead text-center" id="playlist_name"> <%= @playlist.name %> </p>
  <table class="table table-hover table-responsive text-center">
    <tr>
      <th class="text-center">Song Title</th>
      <th class="text-center">Artist Name</th>
      <th class="text-center">BPM</th>
      <th class="text-center">Delete from Playlist?</th>
    </tr>
    
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.name %></td>
        <td><%= song.artist %></td>
        <td><%= song.bpm %></td>
        <td class="text-center"><%= link_to 'Delete', song_path(song),
                                method: :delete, data: { confirm: 'Whoa. Are you sure?' }, class:"btn btn-danger btn-lg" %></td> 
      </tr>
    <% end%>
  </table>
  <div class="text-center" id="show-playlist-btns">
    <a class="btn btn-lg btn-warning" href="/playlists"><i class="fa fa-arrow-left"> Back to Playlists</i></a>
    <a class="btn btn-lg btn-warning" href="/songs"><i class="fa fa-search"> Search for Songs</i></a>
  </div>
</div>


