<%= form_for(@user) do |f| %>
  <%= render 'error_messages', object: f.object %>
  <div>
    <%= f.label :name, class: "control-label" %>:
    <%= f.text_field :name, class: "form-control input-sm", autofocus: true  %>
  
    <br />

    <%= f.label :email, class: "control-label" %>:
    <%= f.text_field :email, class: "form-control input-sm" %> 
    
    <br />

    <%= f.label :password, class: "control-label" %>:
    <%= f.password_field :password, class: "form-control input-sm" %>

    <br />

    <%= f.label :password_confirmation, "Confirmation", class: "control-label"  %>:
    <%= f.password_field :password_confirmation, class: "form-control input-sm" %>

    <br />

    <%= f.submit 'Create my account', class: "btn btn-large btn-alert btn-block" %>
  <% end %>
</div>
</br>
<p class="lead text-center">Already a user? <%= link_to "Sign in!", signin_path %></p>